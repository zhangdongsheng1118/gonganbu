<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_122131"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/nav_bg">


        <ImageView
            android:id="@+id/title_left"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:padding="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/title_center"
            android:layout_width="@dimen/dp_180"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="个人中心"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18" />


        <ImageView
            android:id="@+id/message_search"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/sp_18"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/tianjiaqunliao_icon" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/check_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_renwu"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="综合"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/check_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_weight="1"
            android:background="@drawable/select_renwu"
            android:button="@null"
            android:gravity="center"
            android:text="待接受"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/check_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_weight="1"
            android:background="@drawable/select_renwu"
            android:button="@null"
            android:gravity="center"
            android:text="进行中"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/check_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_weight="1"
            android:background="@drawable/select_renwu"
            android:button="@null"
            android:gravity="center"
            android:text="已结束"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:paddingTop="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_30">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/iv_no"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zanwurenwu_bg" />

            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="暂无任务"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
