<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@drawable/yichangliebiao_message_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/caozuo_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toLeftOf="@+id/caozuo_text2"
        android:ellipsize="end"
        android:lines="2"
        android:text="通告一："
        android:textColor="#BCEBF6"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/caozuo_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="通告时间：2019年6月6日"
        android:textColor="#ffc4f4ff"
        android:textSize="10sp" />
</RelativeLayout>