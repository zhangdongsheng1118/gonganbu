<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#122131"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/nav_bg">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异常上报"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_163"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异常名称："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />
        <EditText
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/yichang_input_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    提交人："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />
        <EditText
            android:layout_marginLeft="2dp"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/yichang_input_01"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        描述："
                android:textColor="#ffc7f5ff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <EditText
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="2dp"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_115"
            android:background="@drawable/yichang_input_02"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传图片："
                android:textColor="#ffc7f5ff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <EditText
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="2dp"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/yichang_btnn_02"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_16"
        android:text="提交"
        android:background="@drawable/yichang_btn_n"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_100"/>

</LinearLayout>