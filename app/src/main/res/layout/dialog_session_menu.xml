<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_rect_solid_white"
        android:orientation="vertical"
        android:divider="@drawable/shape_horizontal_line"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_option_item"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/copy"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_option_item"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/collection"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_option_item"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/send_to_friend"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvReCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_option_item"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/recall"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_option_item"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</FrameLayout>