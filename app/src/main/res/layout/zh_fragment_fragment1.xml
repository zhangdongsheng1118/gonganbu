<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#122131"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/nav_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center"
            android:text="首页"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/message_btn"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/sp_18"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/home_icon" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/diban_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_180"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_35"
                        android:text="姓名："
                        android:textColor="#ff78e6e7"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="手机号：136 6215 5795"
                        android:textColor="#ff78e6e7"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/zhiwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="职位：所长"
                        android:textColor="#ff78e6e7"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/bumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="部门：XX公安局XX分所"
                        android:textColor="#ff78e6e7"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_45">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touxiang_bg"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:background="@drawable/zhaopian_bg"
                            android:id="@+id/iv_icon"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_100" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_21">

                <ImageView
                    android:layout_width="@dimen/dp_125"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/anjian_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="案件信息"
                    android:textColor="#ffc4f4ff"
                    android:textSize="@dimen/sp_18" />
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rev_rw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/ivMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:gravity="right"
                android:paddingRight="@dimen/dp_20"
                android:text="查看更多&gt;&gt;"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>