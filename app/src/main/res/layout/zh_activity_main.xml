<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#122131"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>

        <ImageView
            android:id="@+id/renwu_btn2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_100"
            android:src="@drawable/dangqianrenwu_icon" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_bgg"
            app:itemIconTint="@color/select_text"
            app:itemTextColor="@color/select_text"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu"></android.support.design.widget.BottomNavigationView>


    </RelativeLayout>


</LinearLayout>