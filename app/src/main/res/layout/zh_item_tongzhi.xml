<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_126"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical"
    android:background="#122131">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_126"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/yichangliebiao_message_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jitg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="通告一："
            android:textColor="#BCEBF6"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tgnr"
            android:layout_below="@+id/jitg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:lines="3"
            android:text="预计于2019年6月7日高考期间需要维稳，请各单
位注意！"
            android:textColor="#BCEBF6"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tgsj"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:text="通告时间：2019年6月6日"
            android:textColor="#ffc4f4ff"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>