<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/al_avserver_address"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="服务器地址"
            android:textColor="@color/black0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/al_textview_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="39.106.175.239"
            android:textColor="@color/black0"
            android:textSize="14sp" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/al_avserver_port"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="服务器端口"
            android:textColor="@color/black0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/al_textview_avport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="8188"
            android:textColor="@color/black0"
            android:textSize="14sp" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/al_display"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="视频质量"
            android:textColor="@color/black0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/al_textview_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="低"
            android:textColor="@color/black0"
            android:textSize="14sp" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>